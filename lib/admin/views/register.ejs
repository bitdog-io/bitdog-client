<% layout('layout') -%>
   <div class="container">
    <div class="row">
        <h1 class="text-center"><%= title %></h1> 
        <div class="col-md-6 col-md-offset-3">
        <div class="well well-sm">
            <form action="/secure/register" method="post" class="form-horizontal">
            <fieldset>
                <legend class="text-center">Enter Realm Credentials</legend>
                <div class="form-group">
					<label for="username" class="col-md-3 control-label">Username</label>
					<div class="col-md-9">
						<input type="text" name="username" placeholder="username" id="username" class="form-control" autofocus >
                    </div>
                </div>
                <div class="form-group">
					<label for="passphrase" class="col-md-3 control-label">Passphrase</label>
					<div class="col-md-9">
						<input type="password" name="passphrase" placeholder="passphrase" id="passphrase" class="form-control">
                    </div>
                </div>
			    <div class="form-group">
					<label for="nodename" class="col-md-3 control-label">Name of node</label>
					<div class="col-md-9">
						<input type="text" name="nodename" placeholder="nodename" id="nodename" class="form-control">
                    </div>
                </div>
                <div class="form-group"> 
					<div class="col-md-12 text-right">
						<button type="submit" class="btn btn-primary btn-lg">Register</button>
                    </div>
                </div>
                </fieldset>
            </form>
            </div>
        </div>
        </div>
    </div>

